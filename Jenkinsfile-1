pipeline {
  agent {
    docker {
        image 'maven:3.9.0'
        args '-v /home/vagrant/jenkins_home:/root'
    }
  }
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Scan') {
      steps {
        withSonarQubeEnv(installationName: 'sonar-server') { 
          sh 'mvn clean package sonar:sonar'
        }
      }
    }
  }
}
